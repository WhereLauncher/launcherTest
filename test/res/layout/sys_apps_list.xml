<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:orientation="vertical"
    > 

   <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button 
 		    android:background="@android:color/transparent"
 		    android:layout_width="fill_parent" 
     		android:layout_height="5dp"
 		    />
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/top_botton2"
        android:layout_width="match_parent" 
    	android:layout_height="wrap_content" 
    	>
       <Button 
 		    android:background="@android:color/transparent"
 		    android:layout_width="5dp" 
     		android:layout_height="fill_parent"
 		    />
       
    	<Button
     	android:id="@+id/sys_app2"
     	android:text="@string/often_use"
     	android:textSize="24sp"
     	android:textColor="#ffffff"
     	android:background="@drawable/button_shape2"
     	
     	android:layout_width="fill_parent" 
     	android:layout_height="fill_parent"
     	android:layout_weight="1"
 		/> 
 		
 		<Button 
 		    android:background="@android:color/transparent"
 		    android:layout_width="10dp" 
     		android:layout_height="fill_parent"
 		    />
    	
    	<Button
     	android:text="@string/all_apps"
     	android:textSize="24sp"
     	android:textColor="#ffffff"
     	android:background="@drawable/button_shape1"
     	
     	android:layout_width="fill_parent" 
     	android:layout_height="wrap_content"
     	android:layout_weight="1"
 		/> 
 		
       <Button 
 		    android:background="@android:color/transparent"
 		    android:layout_width="5dp" 
     		android:layout_height="fill_parent"
 		    />
 	</LinearLayout>

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button 
 		    android:background="@android:color/transparent"
 		    android:layout_width="fill_parent" 
     		android:layout_height="10dp"
 		    />
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	 >
        
        <ListView 
            
        android:id="@+id/apps_list2" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
       	android:divider="#ff3399"  
		android:dividerHeight="0dp"  
		android:layoutAnimation="@anim/list_layout_animation"
        > 
    	</ListView>  
    	
    </LinearLayout>


</LinearLayout> 
